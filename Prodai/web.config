<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <system.webServer>
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="2000000"></requestLimits>
      </requestFiltering>
    </security>
    <httpErrors errorMode="DetailedLocalOnly" existingResponse="PassThrough">
      <remove statusCode="404" subStatusCode="13"/>
    </httpErrors>
  </system.webServer>
  <system.web>
    <customErrors mode="Off">
    </customErrors>
  </system.web>

</configuration>